# Maintainer: Viacheslav Chumushuk <voice@root.ua>

pkgname=kbdd
pkgver=0.7
pkgrel=1
pkgdesc="Simple daemon and library to make per window layout."
arch=('i686' 'x86_64')
url="https://github.com/qnikst/kbdd"
license=('GPL3')
depends=()
source=("https://github.com/qnikst/$pkgname/archive/v$pkgver.tar.gz")
md5sums=('0d8abb1d70c2dd43c041ecafd8324133')

build() {
    cd "$startdir/src/$pkgname-$pkgver" || return 1
    aclocal || return 1
    automake --add-missing || echo "Automake errors ignored"
    autoreconf || return 1
    ./configure || return 1
    make || return 1
    make DESTDIR="$startdir/pkg/$pkgname" install || return 1
}
